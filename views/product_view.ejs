<style>
    .comment-section {
        max-width: 800px;
        margin: 0 auto;
    }

    .comment-form {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        padding: 16px;
        margin-bottom: 20px;
    }

    .comment-input {
        display: flex;
        align-items: center;
    }

    .comment-input img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 12px;
    }

    .comment-input input {
        flex-grow: 1;
        background-color: #f0f2f5;
        border: none;
        border-radius: 20px;
        padding: 10px 16px;
        font-size: 14px;
        color: #1c1e21;
    }

    .comment-input input:focus {
        outline: none;
        box-shadow: 0 0 0 2px #1877f2;
    }

    .comment {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        padding: 16px;
        margin-bottom: 16px;
    }

    .comment-header {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
    }

    .comment-header img {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        margin-right: 12px;
    }

    .user-info {
        display: flex;
        flex-direction: column;
    }

    .username {
        font-weight: 600;
        color: #1c1e21;
        font-size: 14px;
    }

    .comment-date {
        color: #65676b;
        font-size: 12px;
    }

    .comment-body {
        font-size: 14px;
        margin-bottom: 12px;
    }

    .comment-actions {
        display: flex;
        gap: 16px;
    }

    .action-button {
        background: none;
        border: none;
        color: #65676b;
        font-size: 13px;
        font-weight: 500;
        display: flex;
        align-items: center;
        cursor: pointer;
        padding: 4px 8px;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .action-button:hover {
        background-color: #e7f3ff;
    }

    .action-button .material-icons {
        font-size: 16px;
        margin-right: 4px;
    }

    .replies {
        margin-left: 48px;
        margin-top: 12px;
    }

    .reply-form {
        display: flex;
        align-items: center;
        margin-top: 8px;
    }

    .reply-form img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .reply-form input {
        flex-grow: 1;
        background-color: #f0f2f5;
        border: none;
        border-radius: 20px;
        padding: 8px 12px;
        font-size: 13px;
        color: #1c1e21;
    }

    .reply-form input:focus {
        outline: none;
        box-shadow: 0 0 0 2px #1877f2;
    }
</style>
