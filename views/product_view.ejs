<script>
    let comment_list_grid = document.querySelector(".comment-list-grid")
    let loadingComment = document.getElementById("loadingComment")

    function postComment(id) {
        let url = "/product_view/addComment"
        let commentText = document.querySelector("#commentText")
        let commentData = {
            product_id: `${id}`,
            commentText: commentText.value
        }
        fetch(url, {
                method: "POST",
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(commentData)
            }).then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    commentText.value = ""
                    alertNotification(data.status, data.message)
                    loadingComment.style.display = "none"
                    comment_list_grid.insertAdjacentHTML("afterbegin", `<div class="comment">
                    <div class="comment-header">
                        <img src="/profile_uploads/${data.profile_image}" alt="User Avatar" style="width: 45px !important; height: 45px !important;">
                        <div class="user-info">
                            <span class="username">${data.username}</span>
                            <span class="comment-date">${timeAgoFromTimestamp(data.created_at)}</span>
                        </div>
                    </div>
                    <div class="comment-body">
                        <p>${data.commentText}</p>
                    </div>
                </div> `)
                } else {
                    alertNotification(data.status, data.message)
                }
            })
    }

    function getCommentData(id) {
        let url = `/product_view/getComments/${id}`;
        fetch(url, {
                method: "GET",
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                loadingComment.style.display = "none"
                if (data.length > 0) {
                    data.forEach(comment => {
                        comment_list_grid.innerHTML += `<div class="comment">
                            <div style='display: flex; justify-content: space-between'>
                                <div class="comment-header">
                                    <img src="/profile_uploads/${comment.profile_image}" alt="User Avatar"
                                        style="width: 45px !important; height: 45px !important;">
                                    <div class="user-info">
                                        <span class="username">${comment.username}</span>
                                        <span class="comment-date">${timeAgoFromTimestamp(comment.created_at)}</span>
                                    </div>
                                </div>
                                ${comment.user_id === "xcode" ? `<div><span class="material-symbols-outlined" style='font-size: 16px; display: none'>delete</span></div>`: ""}
                            </div>
                            <div class="comment-body">
                                <p>${comment.comment_text}</p>
                            </div>
                        </div> `
                    });
                } else {
                    loadingComment.style.display = "block"
                    loadingComment.textContent = "No comments available"

                }
            })
            .catch(error => console.error("Error fetching comments:", error));
    }


    //Get more comment data
    function getMoreCommentData(id, num) {
        let url = `/product_view/getComments/${id}/${num}`;
        fetch(url, {
                method: "GET",
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                loadingComment.style.display = "none"
                if (data.length > 0) {
                    data.forEach(comment => {
                        comment_list_grid.innerHTML += `<div class="comment">
                            <div style='display: flex; justify-content: space-between'>
                                <div class="comment-header">
                                    <img src="/profile_uploads/${comment.profile_image}" alt="User Avatar"
                                        style="width: 45px !important; height: 45px !important;">
                                    <div class="user-info">
                                        <span class="username">${comment.username}</span>
                                        <span class="comment-date">${timeAgoFromTimestamp(comment.created_at)}</span>
                                    </div>
                                </div>
                                ${comment.user_id === "xcode" ? `<div><span class="material-symbols-outlined" style='font-size: 16px; display: none'>delete</span></div>`: ""}
                            </div>
                            <div class="comment-body">
                                <p>${comment.comment_text}</p>
                            </div>
                        </div> `
                    });
                } else {
                    loadingComment.style.display = "block"
                    loadingComment.textContent = "No comments available"

                }
            })
            .catch(error => console.error("Error fetching comments:", error));
    }
    
    setTimeout(() => {
        getCommentData(`<%= product_id%>`)
    }, 300);

    setTimeout(() => {
        getCommentData(`<%= product_id%>`, 3)
    }, 2000);


    function timeAgoFromTimestamp(timestamp) {
        const now = new Date();
        const past = new Date(timestamp.replace(" ", "T")); // Ensure correct parsing in JavaScript
        const diffInSeconds = Math.floor((now - past) / 1000);

        if (diffInSeconds < 60) {
            return `${diffInSeconds} seconds ago`;
        } else if (diffInSeconds < 3600) {
            return `${Math.floor(diffInSeconds / 60)} minutes ago`;
        } else if (diffInSeconds < 86400) {
            return `${Math.floor(diffInSeconds / 3600)} hours ago`;
        } else {
            return `${Math.floor(diffInSeconds / 86400)} days ago`;
        }
    }

    console.log(timeAgoFromTimestamp("2025-02-18 15:36:23"))
</script>
